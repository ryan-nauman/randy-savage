{
    "key": "randysavageaf",
    "name": "Randy Savage af",
    "description": "Sorry, Steve.",
    "vendor": {
        "name": "WWF",
        "url": "https://en.wikipedia.org/wiki/World_Wrestling_Federation"
    },
    "links": {
        "self": "{{localBaseUrl}}/atlassian-connect.json",
        "homepage": "{{localBaseUrl}}/atlassian-connect.json"
    },
    "capabilities": {
        "hipchatApiConsumer": {
            "avatar": {
              "url": "{{localBaseUrl}}/img/savage.png",
              "url@2x": "{{localBaseUrl}}/img/savage@2x.png"
            },
            "scopes": [
                "send_notification",
                "view_room"
            ]
        },
        "installable": {
            "callbackUrl": "{{localBaseUrl}}/installable"
        },
        "configurable": {
             "url": "{{localBaseUrl}}/config"
        },
        "webhook": [
          {
            "url": "{{localBaseUrl}}/weather",
            "pattern": "^/weather",
            "event": "room_message",
            "name": "Get Weather"
          },
          {
            "url": "{{localBaseUrl}}/spotify",
            "pattern": "spotify:|spotify.com",
            "event": "room_message",
            "name": "Spotify lookup"
          }
        ],
        "glance": [
            {
               "name": {
                   "value": "Hello!"
               },
               "queryUrl": "{{localBaseUrl}}/glance",
               "key": "weather.glance",
               "target": "weather.sidebar",
               "icon": {
                   "url": "{{localBaseUrl}}/img/savage.png",
                   "url@2x": "{{localBaseUrl}}/img/savage@2x.png"
               }
            }
        ],
        "webPanel": [
            {
                "key": "weather.sidebar",
                "name": {
                    "value": "Hello Sidebar!"
                },
                "location": "hipchat.sidebar.right",
                "url": "{{localBaseUrl}}/sidebar"
            }
        ],
        "dialog": [
            {
                "key": "weather.dialog",
                "title": {
                    "value": "Hello Dialog!"
                },
                "url": "{{localBaseUrl}}/dialog",
                "options": {
                  "style": "normal",
                  "primaryAction": {
                    "name": {
                      "value": "Say Hello!"
                    },
                    "key": "weather.save",
                    "enabled": true
                  },
                  "size": {
                    "width": "400px",
                    "height": "200px"
                  }
                }
            }
        ],
        "action": [
            {
                "key": "weather.action",
                "name": {
                    "value": "Launch Hello Dialog!"
                },
                "target": "weather.dialog",
                "location": "hipchat.input.action"
            }
        ]
    }
}
