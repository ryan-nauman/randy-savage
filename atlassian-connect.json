{
    "key": "weather",
    "name": "Hello!",
    "description": "My very first HipChat add-on",
    "vendor": {
        "name": "Charlie Awyeah",
        "url": "https://www.hipchat.com"
    },
    "links": {
        "self": "{{localBaseUrl}}/atlassian-connect.json",
        "homepage": "{{localBaseUrl}}/atlassian-connect.json"
    },
    "capabilities": {
        "hipchatApiConsumer": {
            "scopes": [
                "send_notification",
                "view_room"
            ]
        },
        "installable": {
            "callbackUrl": "{{localBaseUrl}}/installable"
        },
        "configurable": {
             "url": "{{localBaseUrl}}/config"
        },
        "webhook": {
            "url": "{{localBaseUrl}}/webhook",
            "pattern": "^/hello",
            "event": "room_message",
            "name": "Hello!"
        },
        "glance": [
            {
               "name": {
                   "value": "Hello!"
               },
               "queryUrl": "{{localBaseUrl}}/glance",
               "key": "weather.glance",
               "target": "weather.sidebar",
               "icon": {
                   "url": "{{localBaseUrl}}/img/logo.png",
                   "url@2x": "{{localBaseUrl}}/img/logo.png"
               }
            }
        ],
        "webPanel": [
            {
                "key": "weather.sidebar",
                "name": {
                    "value": "Hello Sidebar!"
                },
                "location": "hipchat.sidebar.right",
                "url": "{{localBaseUrl}}/sidebar"
            }
        ],
        "dialog": [
            {
                "key": "weather.dialog",
                "title": {
                    "value": "Hello Dialog!"
                },
                "url": "{{localBaseUrl}}/dialog",
                "options": {
                  "style": "normal",
                  "primaryAction": {
                    "name": {
                      "value": "Say Hello!"
                    },
                    "key": "weather.save",
                    "enabled": true
                  },
                  "size": {
                    "width": "400px",
                    "height": "200px"
                  }
                }
            }
        ],
        "action": [
            {
                "key": "weather.action",
                "name": {
                    "value": "Launch Hello Dialog!"
                },
                "target": "weather.dialog",
                "location": "hipchat.input.action"
            }
        ]
    }
}
